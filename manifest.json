{
  "manifest_version": 3,
  "name": "通貨換算ツール",
  "version": "1.0",
  "description": "選択した数字を他の通貨に換算する拡張機能",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "通貨換算設定",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "alarms"],
  "host_permissions": ["https://api.exchangerate-api.com/*"],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }]
}